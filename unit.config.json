{
  "listeners": {
    "*:8080": {
      "pass": "routes"
    }
  },
  "routes": [
    {
      "match": {
        "uri": ["*.php", "*.php/*", "/wp-admin/"]
      },
      "action": {
        "pass": "applications/wordpress/direct"
      }
    },
    {
      "action": {
        "share": "/var/www/public$uri",
        "fallback": {
          "pass": "applications/wordpress/index"
        }
      }
    }
  ],
  "applications": {
    "wordpress": {
      "type": "php",
      "limits": {
        "requests": 1000,
        "timeout": 60
      },
      "processes": {
        "max": 16,
        "spare": 16,
        "idle_timeout": 30
      },
      "targets": {
        "direct": {
          "root": "/var/www/public/"
        },
        "index": {
          "root": "/var/www/public/",
          "script": "index.php"
        }
      }
    }
  },
  "access_log": "/dev/stdout"
}
